            <Label fx:id="fx_phone_label" text="Telefono" GridPane.rowIndex="5" />
            <TextField fx:id="fx_phone" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <ImageView fx:id="fx_phone_validation" fitHeight="20.0" fitWidth="20.0" layoutX="465.0" layoutY="135.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
