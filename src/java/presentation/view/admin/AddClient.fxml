            <Label fx:id="fx_surname_label" text="Cognome" GridPane.rowIndex="1" />
            <TextField fx:id="fx_surname" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ImageView fx:id="fx_surname_validation" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <Label fx:id="fx_sex_label" text="Sesso" GridPane.rowIndex="2" />
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
             <children>
                 <RadioButton fx:id="fx_sex_m" mnemonicParsing="false" text="M">
                     <toggleGroup>
                         <ToggleGroup fx:id="sex" />
                     </toggleGroup>
                 </RadioButton>
                 <RadioButton fx:id="fx_sex_f" mnemonicParsing="false" text="F" toggleGroup="$sex" />
             </children>
            </HBox>
            <ImageView fx:id="fx_sex_validation" fitHeight="20.0" fitWidth="20.0" layoutX="465.0" layoutY="45.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
