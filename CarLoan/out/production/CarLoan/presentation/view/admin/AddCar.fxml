<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="515.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controller.cars.AddCarController">
    <GridPane fx:id="gridPane" focusTraversable="true" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.topAnchor="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="285.0" minWidth="10.0" prefWidth="114.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="489.0" minWidth="10.0" prefWidth="295.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="489.0" minWidth="10.0" prefWidth="23.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="36.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="36.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="36.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="36.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="150.0" minHeight="150.0" prefHeight="150.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="42.0" minHeight="10.0" prefHeight="39.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Marca" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="fx_brand" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Modello" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="fx_model" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Anno" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <CustomTextField fx:id="fx_year" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Targa" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="fx_plate" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Numero posti" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <CustomTextField fx:id="fx_passengers" prefHeight="25.0" prefWidth="272.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="4"/>
        <Label text="Numero porte" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <CustomTextField fx:id="fx_doors" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Chilometraggio" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <CustomTextField fx:id="fx_mileage" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Categoria" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <ObjectComboBox fx:id="fx_category" prefHeight="25.0" prefWidth="300.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="7"/>
        <Label text="Agenzia" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <ObjectComboBox fx:id="fx_agency" prefHeight="25.0" prefWidth="308.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="8"/>
        <Label text="Commento" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <TextArea fx:id="fx_description" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="9"/>
    </GridPane>
    <HBox layoutX="10.0" spacing="5.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <Button mnemonicParsing="false" onAction="#handleSaveCarAction" prefWidth="90.0" text="Salva"/>
        <Button mnemonicParsing="false" onAction="#closeWindow" prefWidth="90.0" text="Annulla"/>
    </HBox>
</AnchorPane>
