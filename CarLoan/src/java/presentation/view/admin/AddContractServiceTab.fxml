                        <Button mnemonicParsing="false" onAction="#addServiceToCart" text="Aggiungi" />
                        <Button layoutX="24.0" layoutY="98.0" mnemonicParsing="false" onAction="#removeServiceFromCart" prefWidth="65.0" text="Elimina" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
